# 서버 설정
PORT=3000

# JWT 보안 키 (실제 운영 시에는 복잡한 랜덤 문자열로 변경)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT 토큰 만료 시간
JWT_EXPIRES_IN=24h

# 데이터베이스 설정
DATABASE_PATH=./game.db

# 환경 설정
NODE_ENV=development

